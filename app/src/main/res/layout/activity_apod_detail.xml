<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_splash"
    tools:context=".Activity.ApodDetailActivity">
    <include
        android:id="@+id/detail_actionbar"
        layout="@layout/action_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/detail_actionbar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/img_apod_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txt_apod_detail_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_apod_detail"
            android:layout_marginStart="10dp"
            android:textSize="17dp"
            android:text="jghcdvhjuguivf"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/txt_apod_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_apod_detail"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/txt_apod_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_apod_detail_title"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            />

    </RelativeLayout>
</RelativeLayout>